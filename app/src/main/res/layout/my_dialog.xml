<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1f25">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone nr:"
        android:id="@+id/tvPhone"
        android:textSize="24sp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/tvAdress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:textColor="#e6e6e6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress:"
        android:id="@+id/tvAdress"
        android:textSize="24sp"
        android:layout_below="@+id/tvName"
        android:layout_alignLeft="@+id/tvPhone"
        android:layout_alignStart="@+id/tvPhone"
        android:layout_marginBottom="10dp"
        android:fontFamily="cursive"
        android:textColor="#e6e6e6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="24sp"
        android:id="@+id/tvName"
        android:layout_alignBaseline="@+id/etName"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignLeft="@+id/tvAdress"
        android:layout_alignStart="@+id/tvAdress"
        android:layout_marginBottom="10dp"
        android:fontFamily="cursive"
        android:textColor="#e6e6e6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name..."
        android:ems="10"
        android:id="@+id/etName"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etPhone"
        android:layout_alignStart="@+id/etPhone"
        android:imeOptions="actionNext"
        android:fontFamily="serif-monospace"
        android:textColor="#e6e6e6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:imeOptions="actionNext"
        android:ems="10"
        android:id="@+id/etAdress"
        android:hint="Adress"
        android:layout_alignBaseline="@+id/tvAdress"
        android:layout_alignBottom="@+id/tvAdress"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName"
        android:fontFamily="serif-monospace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etPhone"
        android:hint="Phone number..."
        android:imeOptions="actionDone"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_below="@+id/etAdress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif-monospace"
        android:textColor="#e6e6e6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName"
        android:layout_marginTop="11dp"
        android:id="@+id/tvLoadSharedPrefs"
        android:textSize="18sp"
        android:fontFamily="serif-monospace" />

    <Button
        android:text="@android:string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSave"
        android:layout_toRightOf="@+id/btnSave"
        android:layout_toEndOf="@+id/btnSave"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/btnOk"
        android:fontFamily="serif-monospace"
        android:background="@null"
        android:textColor="#24b00d"
        android:textSize="23sp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/btnSave"
        android:background="@null"
        android:fontFamily="serif-monospace"
        android:textColor="#24b00d"
        android:layout_below="@+id/etPhone"
        android:layout_toRightOf="@+id/tvAdress"
        android:layout_toEndOf="@+id/tvAdress"
        android:textSize="23sp" />
</RelativeLayout>